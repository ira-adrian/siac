<?php

namespace Siarme\AusentismoBundle\Entity;

use Doctrine\ORM\Mapping as ORM;

/**
 * Clase
 *
 * @ORM\Table(name="clase")
 * @ORM\Entity(repositoryClass="Siarme\AusentismoBundle\Repository\ClaseRepository")
 */
class Clase
{
    /**
     * @var int
     *
     * @ORM\Column(name="id", type="integer")
     * @ORM\Id
     * @ORM\GeneratedValue(strategy="AUTO")
     */
    private $id;

    /**
     * @var string
     *
     * @ORM\Column(name="clase", type="string", length=255)
     */
    private $clase;

    /** 
     * @ORM\ManyToOne(targetEntity="Siarme\AusentismoBundle\Entity\Rubro",inversedBy="clase") 
     * @ORM\JoinColumn(name="rubro_id", referencedColumnName="id")
     */
    private $rubro;

    /** 
     *@ORM\OneToMany(targetEntity="Siarme\ExpedienteBundle\Entity\Tramite", mappedBy="clase") 
     */
    private $tramite;

    /**
     * Get id.
     *
     * @return int
     */
    public function getId()
    {
        return $this->id;
    }

    /**
     * Constructor
     */
    public function __construct()
    {
        $this->item = new \Doctrine\Common\Collections\ArrayCollection();
        $this->tramite = new \Doctrine\Common\Collections\ArrayCollection();
    }

   /**
     * Add item
     *
     * @param \Siarme\AusentismoBundle\Entity\Item $item
     *
     * @return Clase
     */
    public function addItem(\Siarme\AusentismoBundle\Entity\Item $item)
    {
        $this->item[] = $item;

        return $this;
    }

    /**
     * Remove item
     *
     * @param \Siarme\AusentismoBundle\Entity\Item $item
     */
    public function removeItem(\Siarme\AusentismoBundle\Entity\Item $item)
    {
        $this->item->removeElement($item);
    }

    /**
     * Get item
     *
     * @return \Doctrine\Common\Collections\Collection
     */
    public function getItem()
    {
        return $this->item;
    }

    /**
     * Set rubro
     *
     * @param \Siarme\AusentismoBundle\Entity\Rubro $rubro
     *
     * @return Clase
     */
    public function setRubro(\Siarme\AusentismoBundle\Entity\Rubro $rubro = null)
    {
        $this->rubro = $rubro;

        return $this;
    }

    /**
     * Get rubro
     *
     * @return \Siarme\AusentismoBundle\Entity\Rubro
     */
    public function getRubro()
    {
        return $this->rubro;
    }

    /**
     * Set clase.
     *
     * @param string $clase
     *
     * @return Clase
     */
    public function setClase($clase)
    {
        $this->clase = $clase;

        return $this;
    }

    /**
     * Get clase.
     *
     * @return string
     */
    public function getClase()
    {
        return $this->clase;
    }

    /**
     *  ToString
     */
    public function __toString()
    {
         return $this->getRubro()." - ".$this->getClase();
    }

    /**
     * Add tramite
     *
     * @param \Siarme\ExpedienteBundle\Entity\Tramite $tramite
     *
     * @return Clase
     */
    public function addTramite(\Siarme\ExpedienteBundle\Entity\Tramite $tramite)
    {
        $this->tramite[] = $tramite;

        return $this;
    }

    /**
     * Remove tramite
     *
     * @param \Siarme\ExpedienteBundle\Entity\Tramite $tramite
     */
    public function removeTramite(\Siarme\ExpedienteBundle\Entity\Tramite $tramite)
    {
        $this->tramite->removeElement($tramite);
    }

    /**
     * Get tramite
     *
     * @return \Doctrine\Common\Collections\Collection
     */
    public function getTramite()
    {
        return $this->tramite;
    }
}
